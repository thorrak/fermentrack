MAILGUN_API_KEY=
MAILGUN_DOMAIN=


# django-allauth
# ------------------------------------------------------------------------------
DJANGO_ACCOUNT_ALLOW_REGISTRATION=True

# Gunicorn
# ------------------------------------------------------------------------------
WEB_CONCURRENCY=4

# Sentry
# ------------------------------------------------------------------------------
SENTRY_DSN=


# Redis
# ------------------------------------------------------------------------------
#REDIS_URL=redis://redis:6379/0
REDIS_URL=redis://127.0.0.1:6379/0


# Version Management
# ------------------------------------------------------------------------------
ENV_DJANGO_VERSION=2
